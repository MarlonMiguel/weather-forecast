<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- EditText para busca -->
    <EditText
        android:id="@+id/search_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código cidade"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Spinner para Estados com peso menor -->
        <Spinner
            android:id="@+id/estado_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/cidade_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Adicionando um espaço entre os Spinners e o botão -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" /> <!-- Espaço de 16dp -->

    <!-- Botão -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carregar informações do tempo"
        android:id="@+id/load_button"/>

    <!-- RecyclerView para exibir informações -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- CardView fixo no rodapé -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Exibe a cidade e estado -->
            <TextView
                android:id="@+id/city_name"
                android:text="Cidade, Estado"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Exibe a descrição do clima -->
            <TextView
                android:id="@+id/weather_description"
                android:text="Descrição do clima"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Exibe a temperatura -->
            <TextView
                android:id="@+id/temperature"
                android:text="Temperatura"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Exibe a umidade -->
            <TextView
                android:id="@+id/humidity"
                android:text="Umidade"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Exibe a velocidade do vento -->
            <TextView
                android:id="@+id/wind_speed"
                android:text="Velocidade do vento"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Exibe a previsão -->
            <TextView
                android:id="@+id/forecast"
                android:text="Previsão"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
